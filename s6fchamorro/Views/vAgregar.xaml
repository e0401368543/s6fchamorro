<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="s6fchamorro.Views.vAgregar"
             NavigationPage.HasBackButton="False"
             Title="vAgregar">
    <VerticalStackLayout>
        <Label 
            Text="Agregar nuevo estudiante"
            HorizontalTextAlignment="Center"
            FontSize="20"
             />
        <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Ingrese el Apellido"/>
        <Entry x:Name="txtEdad" Placeholder="Ingrese el edad"/>
        <Button x:Name="btnAgregar"
                Text=" Agregar estudiante"
                Clicked="btnAgregar_Clicked"/>

    </VerticalStackLayout>
</ContentPage>